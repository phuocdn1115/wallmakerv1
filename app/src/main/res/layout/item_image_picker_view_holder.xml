<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image_picker"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/dp5"
        app:cardBackgroundColor="@color/color_D9131313"
        android:layout_width="match_parent"
        android:minHeight="@dimen/dp100"
        android:minWidth="@dimen/dp100"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:clickable="false"
            android:src="@drawable/ic_normal_image_picker"
            android:layout_margin="@dimen/dp5"
            android:id="@+id/ic_selected_image_picker"
            android:layout_gravity="end|top"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"/>
    </androidx.cardview.widget.CardView>
</layout>
