<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <eightbitlab.com.blurview.BlurView
        android:clickable="true"
        android:clipToPadding="false"
        android:outlineProvider="bounds"
        app:blurOverlayColor="@color/color_CCFFFFFF"
        android:id="@+id/blur_view_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:id="@+id/rv_image_picked"
                android:paddingTop="@dimen/dp10"
                android:layout_marginStart="-7dp"
                android:paddingBottom="@dimen/dp10"
                app:layout_constraintBottom_toTopOf="@+id/layout_btn_continue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="@dimen/dp24"
                android:id="@+id/layout_btn_continue"
                android:layout_marginBottom="@dimen/dp24"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_drag_drop_image"
                    android:visibility="invisible"
                    android:text="@string/txt_drag_drop_image"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp12"
                    android:paddingEnd="@dimen/dp30"
                    android:textColor="@color/color_80131313"
                    android:fontFamily="@font/beviet_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_continue_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />
                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_btn_grey_color"
                    android:id="@+id/btn_continue_container"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_continue"
                        android:textSize="@dimen/sp12"
                        android:textColor="#898989"
                        android:text="@string/txt_continue_process"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/beviet_semi_bold"
                        android:paddingStart="@dimen/dp15"
                        android:paddingVertical="@dimen/dp11"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/ic_continue"
                        android:paddingEnd="@dimen/dp15"
                        android:src="@drawable/ic_to_right_arrow_disable"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </eightbitlab.com.blurview.BlurView>
</layout>
