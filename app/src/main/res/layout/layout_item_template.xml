<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp65"
        android:layout_height="@dimen/dp116"
        android:layout_marginStart="@dimen/dp7"
        android:layout_marginEnd="@dimen/dp7"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_image_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/dp6"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="@dimen/dp0">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp110"
                android:padding="@dimen/dp2"
                app:cardCornerRadius="@dimen/dp5"
                android:layout_gravity="center"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="@dimen/dp0">

                <ImageView
                    android:id="@+id/img_image_selected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_bg_placeholder_video_home"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view_template_selected"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp3"
                android:background="@drawable/border_template_selected"
                android:layout_height="match_parent">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
