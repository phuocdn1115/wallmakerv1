<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/dp0"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="#C5C4C4"/>
        <TextView
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/bg_skeleton_child_item"
            app:layout_constraintBottom_toTopOf="@id/card_view_2"
            android:layout_width="match_parent"
            android:fontFamily="@font/beviet_extra_bold"
            android:layout_marginBottom="@dimen/dp5"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/card_view_2"
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/bg_skeleton_child_item"
            app:layout_constraintBottom_toTopOf="@id/card_view_3"
            android:layout_width="match_parent"
            android:fontFamily="@font/beviet_extra_bold"
            android:layout_marginBottom="@dimen/dp5"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/card_view_3"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp70"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_skeleton_child_item"
            android:layout_width="match_parent"
            android:fontFamily="@font/beviet_extra_bold"
            android:layout_marginBottom="@dimen/dp10"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>